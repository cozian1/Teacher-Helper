<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Calculator">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="2">
            <EditText
                android:id="@+id/inputTxt"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:textDirection="firstStrongLtr"
                android:singleLine="true"
                android:textColor="#535353"
                android:textSize="@dimen/_25sdp"
                android:focusable="false"
                android:clickable="false"
                android:layout_weight="1"/>


            <EditText
                android:id="@+id/outPuttxt"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:textDirection="firstStrongLtr"
                android:scrollHorizontally="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_50sdp"
                android:focusable="false"
                android:clickable="false"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@color/but_color_P"
            android:layout_weight="6">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_7sdp"
                android:columnCount="4"
                android:rowCount="5">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clear"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="0"
                    app:cornerRadius="@dimen/_10sdp"
                    android:text="c"
                    android:textSize="@dimen/_40sdp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/avg"
                    android:onClick="avg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="1"
                    app:cornerRadius="@dimen/_10sdp"
                    android:text="Avg"
                    android:textSize="@dimen/_18sdp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="%"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="/"
                    android:textSize="@dimen/_35sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:onClick="koko"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:text="7"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="8"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="9"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="*"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:onClick="koko"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:text="4"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="5"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="6"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="-"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:onClick="koko"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:text="1"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="2"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="3"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="+"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:onClick="koko"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:text="."
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:onClick="koko"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="0"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"

                    android:background="@drawable/button"
                    android:backgroundTint="@color/but_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:onClick="koko"/>
                <com.google.android.material.button.MaterialButton
                    android:text="="
                    android:gravity="center_horizontal|top"
                    android:textSize="@dimen/_45sdp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:layout_columnSpan="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_column="2"
                    app:cornerRadius="@dimen/_20sdp"
                    android:backgroundTint="#FFEB3B"
                    android:onClick="equal"/>



            </GridLayout>

        </LinearLayout>
    </LinearLayout>





</RelativeLayout>